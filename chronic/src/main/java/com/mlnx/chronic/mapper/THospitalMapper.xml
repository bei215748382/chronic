<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mlnx.chronic.mapper.THospitalMapper">
	<resultMap id="BaseResultMap" type="com.mlnx.chronic.entity.THospital">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="city_id" jdbcType="INTEGER" property="cityId" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="level_id" jdbcType="INTEGER" property="levelId" />
	</resultMap>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from
		t_hospital
		where id = #{id}
	</delete>
	<insert id="insert" parameterType="com.mlnx.chronic.entity.THospital">
		insert into t_hospital (id,
		city_id, name,level_id
		)
		values (#{id}, #{cityId},
		#{name},#{levelId}
		)
	</insert>
	<update id="updateByPrimaryKey" parameterType="com.mlnx.chronic.entity.THospital">
		update t_hospital
		<set>
			<if test="cityId != null and cityId != ''">
				city_id = #{cityId},
			</if>
			<if test="name != null and name != ''">
				name = #{name},
			</if>
			<if test="levelId != null and levelId != ''">
				level_id = #{levelId}
			</if>
		</set>
		where id = #{id}
	</update>
	<select id="selectByPrimaryKey" parameterType="java.lang.Integer"
		resultMap="BaseResultMap">
		select *
		from t_hospital
		where id = #{id}
	</select>
	<select id="selectAll" resultMap="BaseResultMap">
		select *
		from
		t_hospital
	</select>
	<select id="findByCityId" parameterType="Integer" resultMap="BaseResultMap">
		select * from t_hospital where city_id = #{id}
	</select>
	<select id="findByCityIdWithLevel" parameterType="map"
		resultMap="BaseResultMap">
		select *
		from t_hospital
		<where>
			<if test="id != null and id != ''">
				city_id = #{id}
			</if>
			<if test="level != null and level != ''">
				and level_id = #{level}
			</if>
		</where>
	</select>
	<select id="findByCityNameWithLevel" parameterType="map"
		resultMap="BaseResultMap">
		select *
		from t_hospital
		<where>
			<if test="id != null and id != ''">
				city_id = (select id from t_city where
				name = #{id})
			</if>
			<if test="level != null and level != ''">
				and level_id = #{level}
			</if>
		</where>
	</select>
</mapper>